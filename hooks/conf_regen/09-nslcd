# Exit hook on subcommand error or unset variable
set -Eeuo pipefail

do_init_regen() {
    do_pre_regen ""
    systemctl restart nslcd
}

do_pre_regen() {
    pending_dir=$1

    cd /usr/share/yunohost/conf/nslcd

    install -D -m 644 nslcd.conf "${pending_dir}/etc/nslcd.conf"
}

do_post_regen() {
    regen_conf_files=$1

    [[ -z "$regen_conf_files" ]] \
        || systemctl restart nslcd
}

"do_$1_regen" "${@:2}"
